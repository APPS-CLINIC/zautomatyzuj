            </div>
          </div>

          <!-- Phone Bottom Navigation -->
          <div class="phone-bottom-nav">
            <div class="nav-item active">
              <div class="nav-icon">üè†</div>
            </div>
            <div class="nav-item">
              <div class="nav-icon">üìä</div>
            </div>
