---
/**
 * ThemeToggle.astro - Przełącznik motywu Dark/Light
 * 
 * Funkcje:
 * - Przełączanie między dark/light mode
 * - Zapisywanie preferencji w localStorage
 * - Automatyczne wykrywanie prefers-color-scheme
 * - Animowane ikony słońca/księżyca
 */

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props as Props;
---

<button 
  id="theme-toggle"
  class={`inline-flex items-center justify-center rounded-full border border-brand-primary/20 bg-slate-900/50 backdrop-blur-sm p-2 text-brand-primary transition-all duration-300 hover:border-brand-primary/40 hover:bg-brand-primary/10 ${className}`}
  aria-label="Przełącz motyw"
  title="Przełącz między trybem ciemnym a jasnym"
>
  <!-- Ikona słońca (light mode) -->
  <svg 
    id="sun-icon"
    class="h-5 w-5 transition-all duration-300 dark:hidden" 
    fill="currentColor" 
    viewBox="0 0 20 20"
  >
    <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
  </svg>
  
  <!-- Ikona księżyca (dark mode) -->
  <svg 
    id="moon-icon"
    class="h-5 w-5 transition-all duration-300 hidden dark:block" 
    fill="currentColor" 
    viewBox="0 0 20 20"
  >
    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
  </svg>
</button>

<script>
  // Theme toggle functionality
  function initThemeToggle() {
    const themeToggle = document.getElementById('theme-toggle');
    const html = document.documentElement;
    
    // Sprawdź zapisaną preferencję lub użyj systemowej
    const savedTheme = localStorage.getItem('theme');
    const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    const currentTheme = savedTheme || systemTheme;
    
    // Ustaw początkowy motyw
    html.classList.toggle('dark', currentTheme === 'dark');
    
    // Obserwuj zmiany preferencji systemowej
    const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');
    mediaQuery.addEventListener('change', (e) => {
      if (!localStorage.getItem('theme')) {
        html.classList.toggle('dark', e.matches);
      }
    });
    
    // Obsługa kliknięcia
    themeToggle?.addEventListener('click', () => {
      const isDark = html.classList.contains('dark');
      const newTheme = isDark ? 'light' : 'dark';
      
      html.classList.toggle('dark');
      localStorage.setItem('theme', newTheme);
      
      // Animacja ikon
      const sunIcon = document.getElementById('sun-icon');
      const moonIcon = document.getElementById('moon-icon');
      
      if (sunIcon && moonIcon) {
        sunIcon.style.transform = 'rotate(180deg) scale(0)';
        moonIcon.style.transform = 'rotate(180deg) scale(0)';
        
        setTimeout(() => {
          sunIcon.style.transform = 'rotate(0deg) scale(1)';
          moonIcon.style.transform = 'rotate(0deg) scale(1)';
        }, 150);
      }
    });
  }
  
  // Inicjalizuj po załadowaniu DOM
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initThemeToggle);
  } else {
    initThemeToggle();
  }
</script>

<style>
  /* Dodatkowe style dla animacji */
  #theme-toggle {
    position: relative;
    overflow: hidden;
  }
  
  #theme-toggle::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: radial-gradient(circle, var(--brand-primary) 0%, transparent 70%);
    transform: translate(-50%, -50%);
    transition: width 0.3s ease, height 0.3s ease;
    border-radius: 50%;
    z-index: -1;
  }
  
  #theme-toggle:hover::before {
    width: 100px;
    height: 100px;
  }
  
  /* Animacje ikon */
  #sun-icon,
  #moon-icon {
    transition: transform 0.3s ease, opacity 0.3s ease;
  }
  
  /* Hover effect */
  #theme-toggle:hover {
    transform: translateY(-1px);
  }
  
  /* Focus styles */
  #theme-toggle:focus {
    outline: 2px solid var(--brand-primary);
    outline-offset: 2px;
  }
  
  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    #theme-toggle,
    #sun-icon,
    #moon-icon {
      transition: none;
    }
  }
</style>
