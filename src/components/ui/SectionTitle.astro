---
/**
 * SectionTitle.astro - Komponent tytułu sekcji z gradientem i animacjami
 * 
 * Warianty:
 * - h1: Największy tytuł (domyślny)
 * - h2: Średni tytuł
 * - h3: Mniejszy tytuł
 * 
 * Style:
 * - gradient: Tytuł z gradientem brand (domyślny)
 * - solid: Tytuł z jednolitym kolorem
 * - outline: Tytuł z outline efektem
 */

interface Props {
  level?: 'h1' | 'h2' | 'h3';
  style?: 'gradient' | 'solid' | 'outline';
  align?: 'left' | 'center' | 'right';
  class?: string;
}

const { 
  level = 'h1', 
  style = 'gradient',
  align = 'center',
  class: className = '',
  ...rest 
} = Astro.props as Props;

// Klasy dla poziomów
const levelClasses = {
  h1: 'text-4xl font-bold md:text-5xl lg:text-6xl',
  h2: 'text-3xl font-bold md:text-4xl lg:text-5xl',
  h3: 'text-2xl font-bold md:text-3xl lg:text-4xl'
};

// Klasy dla stylów
const styleClasses = {
  gradient: 'bg-clip-text text-transparent',
  solid: 'text-brand-primary',
  outline: 'text-transparent bg-clip-text [-webkit-text-stroke:2px_rgb(43_110_249)]'
};

// Klasy dla wyrównania
const alignClasses = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right'
};

// Połącz klasy
const titleClasses = [
  levelClasses[level],
  styleClasses[style],
  alignClasses[align],
  'leading-tight tracking-tight',
  className
].filter(Boolean).join(' ');
---

{level === 'h1' && <h1 class={titleClasses} {...rest}><slot /></h1>}
{level === 'h2' && <h2 class={titleClasses} {...rest}><slot /></h2>}
{level === 'h3' && <h3 class={titleClasses} {...rest}><slot /></h3>}

<style>
  /* Animacje dla gradient text */
  .bg-gradient-brand {
    background: linear-gradient(135deg, var(--brand-gradient-from), var(--brand-gradient-via), var(--brand-gradient-to));
    background-size: 200% 200%;
    animation: gradientMove 3s ease infinite;
  }
  
  .text-gradient {
    background: linear-gradient(135deg, var(--brand-gradient-from), var(--brand-gradient-via), var(--brand-gradient-to));
    background-size: 200% 200%;
    animation: gradientMove 3s ease infinite;
  }
  
  @keyframes gradientMove {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
  
  /* Outline effect */
  .outline {
    position: relative;
  }
  
  .outline::before {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--brand-primary), var(--brand-secondary), var(--brand-accent));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-stroke: 2px transparent;
    z-index: -1;
  }
  
  /* Hover effects */
  .gradient:hover {
    animation-duration: 1s;
  }
  
  .solid:hover {
    color: var(--brand-secondary);
    transition: color 0.3s ease;
  }
</style>
