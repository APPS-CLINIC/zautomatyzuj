---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { size = 'md', class: className = '' } = Astro.props;

const sizeClasses = {
  sm: 'w-3 h-3',
  md: 'w-6 h-6',
  lg: 'w-8 h-8',
};

const wingSize = {
  sm: 'w-1.5 h-1',
  md: 'w-2 h-1.5',
  lg: 'w-3 h-2',
};

const dotSize = {
  sm: 'w-0.5 h-0.5',
  md: 'w-1 h-1',
  lg: 'w-1.5 h-1.5',
};
---

<div class={`flex items-center justify-center ${className}`}>
  <div class="relative">
    <!-- Bee body -->
    <div class="relative">
      <!-- Bee body with honey gradient -->
      <div class={`${sizeClasses[size]} bg-gradient-to-r from-yellow-400 via-amber-500 to-yellow-600 rounded-full flex items-center justify-center`}>
        <!-- Black stripes -->
        <div class="absolute inset-0 rounded-full overflow-hidden">
          <div class="absolute top-1/4 left-0 right-0 h-0.5 bg-gray-800"></div>
          <div class="absolute top-1/2 left-0 right-0 h-0.5 bg-gray-800"></div>
          <div class="absolute top-3/4 left-0 right-0 h-0.5 bg-gray-800"></div>
        </div>
      </div>
      
      <!-- Wings - dark gray -->
      <div class={`absolute -top-0.5 -left-0.5 ${wingSize[size]} bg-gray-600 rounded-full`}></div>
      <div class={`absolute -top-0.5 -right-0.5 ${wingSize[size]} bg-gray-600 rounded-full`}></div>
    </div>
    
    <!-- Flight path trail dots - static -->
    <div class="absolute inset-0">
      <div class={`absolute top-0 left-1/2 ${dotSize[size]} bg-yellow-300 rounded-full transform -translate-x-1/2 -translate-y-2 opacity-60`}></div>
      <div class={`absolute top-1/4 right-0 ${dotSize[size]} bg-amber-300 rounded-full transform translate-x-2 opacity-40`}></div>
      <div class={`absolute bottom-0 left-1/2 ${dotSize[size]} bg-yellow-300 rounded-full transform -translate-x-1/2 translate-y-2 opacity-60`}></div>
      <div class={`absolute top-3/4 left-0 ${dotSize[size]} bg-amber-300 rounded-full transform -translate-x-2 opacity-40`}></div>
    </div>
  </div>
</div>
