    background: rgba(15, 23, 42, 0.95);
    backdrop-filter: blur(20px);
    z-index: 999;
    padding: 2rem;
    flex-direction: column;
    gap: 2rem;
  }

  .mobile-menu.active {
    display: flex;
  }

  .mobile-menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .mobile-menu-close {
    background: none;
    border: none;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.5rem;
  }

