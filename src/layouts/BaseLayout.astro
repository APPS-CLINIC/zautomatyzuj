---
import '../styles/global.css';
import type { Locale } from '../i18n/config';

interface Props {
  readonly title: string;
  readonly description: string;
  readonly lang: Locale;
}

const { title, description, lang } = Astro.props as Props;
const currentYear = new Date().getFullYear();
---
<!DOCTYPE html>
<html lang={lang} class="bg-slate-950">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="flex min-h-screen flex-col">
    <header class="border-b border-slate-800 bg-slate-900/60 backdrop-blur">
      <div class="mx-auto flex w-full max-w-5xl items-center justify-between gap-4 px-4 py-5">
        <a href={`/${lang}/`} class="text-lg font-semibold text-slate-100 transition-colors hover:text-sky-300">
          ZautomatyzujAI
        </a>
        <slot name="nav" />
      </div>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-slate-800 bg-slate-900/60">
      <div class="mx-auto w-full max-w-5xl px-4 py-6 text-sm text-slate-400">
        <slot name="footer">
          <p>&copy; {currentYear} ZautomatyzujAI</p>
        </slot>
      </div>
    </footer>
  </body>
</html>
